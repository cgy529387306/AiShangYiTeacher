<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <com.weima.aishangyi.jiaoshi.widget.FragmentViewPager
        android:id="@+id/vip_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:paddingTop="4dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/btn_tab_home"
            android:textColor="@drawable/btn_text_gray_orange"
            android:text="首页"
            android:textSize="@dimen/common_text_mini"/>

        <TextView
            android:id="@+id/btn_answer"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/btn_tab_answer"
            android:textColor="@drawable/btn_text_gray_orange"
            android:text="问答"
            android:textSize="@dimen/common_text_mini"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/btn_find"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:drawableTop="@drawable/btn_tab_find"
                android:textColor="@drawable/btn_text_gray_orange"
                android:text="发现"
                android:textSize="@dimen/common_text_mini" />
            <ImageView
                android:id="@+id/imv_find_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:src="@drawable/ic_msg_new"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/btn_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:drawableTop="@drawable/btn_tab_user"
                android:textColor="@drawable/btn_text_gray_orange"
                android:text="我的"
                android:textSize="@dimen/common_text_mini" />
            <ImageView
                android:id="@+id/imv_user_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:src="@drawable/ic_msg_new"/>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>