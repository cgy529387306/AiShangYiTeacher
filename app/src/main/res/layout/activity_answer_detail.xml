<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="10dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/background_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/btn_list_no_boder"
        android:gravity="center_vertical">

        <View
            android:layout_width="5dp"
            android:layout_height="16dp"
            android:layout_marginLeft="10dp"
            android:background="@color/base_orange" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="我的回答"
            android:textColor="@color/base_orange"
            android:textSize="@dimen/common_text" />
    </LinearLayout>
    <EditText
        android:id="@+id/edit_user_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="top"
        android:hint="请输入解答的内容~"
        android:minHeight="180dp"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/hint_color"
        android:textSize="@dimen/common_text_small" />
    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="bottom"
        android:background="@drawable/shape_btn_orange"
        android:text="确认提交"
        android:textColor="@color/white" />
</LinearLayout>