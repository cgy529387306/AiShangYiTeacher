<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/base_orange"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txv_home_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:drawablePadding="2dp"
                android:drawableRight="@drawable/ic_home_arrow_down"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="福州"
                android:textColor="@color/white"
                android:textSize="@dimen/common_text" />

            <TextView
                android:id="@+id/edt_home_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="爱尚艺"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <ImageView
                    android:id="@+id/imv_home_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/ic_home_msg" />
                <ImageView
                    android:id="@+id/imv_msg_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="right"
                    android:visibility="gone"
                    android:src="@drawable/ic_msg_new"/>
            </FrameLayout>

        </RelativeLayout>

        <com.jude.rollviewpager.RollPagerView
            android:id="@+id/myViewPager1"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            app:rollviewpager_hint_color="@color/base_orange"
            app:rollviewpager_hint_gravity="center"
            app:rollviewpager_hint_paddingBottom="10dp"
            app:rollviewpager_play_delay="3000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_new_visitor"
                android:layout_width="0dp"
                android:background="@drawable/btn_list_no_boder"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_new_visitor"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="今日访问"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/common_text" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/line_color" />

            <LinearLayout
                android:id="@+id/btn_new_order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_list_no_boder"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_new_order"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="新的订单"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/common_text" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_user_info"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_list_no_boder"
            android:gravity="center_vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_user_info"
                android:drawablePadding="10dp"
                android:text="个人信息"
                android:textColor="@color/text_color"
                android:textSize="@dimen/common_text" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/common_icon_arrow" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:id="@+id/btn_user_identification"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/btn_list_no_boder"
            android:gravity="center_vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_user_identification"
                android:drawablePadding="10dp"
                android:text="认证资料"
                android:textColor="@color/text_color"
                android:textSize="@dimen/common_text" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/common_icon_arrow" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:id="@+id/btn_class_setting"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/btn_list_no_boder"
            android:gravity="center_vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_class_setting"
                android:drawablePadding="10dp"
                android:text="课程设置"
                android:textColor="@color/text_color"
                android:textSize="@dimen/common_text" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/common_icon_arrow" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:id="@+id/btn_teacher_guide"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/btn_list_no_boder"
            android:gravity="center_vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_teacher_guide"
                android:drawablePadding="10dp"
                android:text="老师指南"
                android:textColor="@color/text_color"
                android:textSize="@dimen/common_text" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/common_icon_arrow" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:id="@+id/btn_custom_service"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/btn_list_no_boder"
            android:gravity="center_vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_custom_sevice"
                android:drawablePadding="10dp"
                android:text="联系客服"
                android:textColor="@color/text_color"
                android:textSize="@dimen/common_text" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/common_icon_arrow" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color" />
        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/background_color" />
    </LinearLayout>
</ScrollView>