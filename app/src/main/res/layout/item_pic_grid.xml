<?xml version="1.0" encoding="utf-8"?>
<com.weima.aishangyi.jiaoshi.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="16dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_pic_add" />

    <ImageView
        android:id="@+id/delete"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="6dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_pic_delete" />
</com.weima.aishangyi.jiaoshi.widget.SquareLayout>