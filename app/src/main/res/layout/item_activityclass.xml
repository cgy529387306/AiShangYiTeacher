<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imv_icon"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_default"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/txv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="广州第十一届舞蹈大赛现场门票"
        android:textColor="@color/text_color"
        android:textSize="@dimen/common_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_activity_starttime"
            android:drawablePadding="10dp"
            android:text="活动时间："
            android:textColor="@color/base_gray"
            android:textSize="@dimen/common_text_small" />

        <TextView
            android:id="@+id/txv_beginTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-11-10 08:30"
            android:textColor="@color/base_gray"
            android:textSize="@dimen/common_text_small" />

        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:layout_marginLeft="10dp"
            android:background="@color/base_gray" />

        <TextView
            android:id="@+id/txv_end_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="进行中"
            android:textColor="@color/base_gray"
            android:textSize="@dimen/common_text_small" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/ic_activity_endtime"
                android:drawablePadding="10dp"
                android:text="报名截止："
                android:textColor="@color/base_gray"
                android:textSize="@dimen/common_text_small" />

            <TextView
                android:id="@+id/txv_endTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-10-10 08:30"
                android:textColor="@color/base_gray"
                android:textSize="@dimen/common_text_small" />

            <View
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:layout_marginLeft="10dp"
                android:background="@color/base_gray" />

            <TextView
                android:id="@+id/txv_time_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="报名中"
                android:textColor="@color/base_gray"
                android:textSize="@dimen/common_text_small" />
        </LinearLayout>

        <TextView
            android:id="@+id/txv_cost"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_rect_lightred"
            android:text="¥50"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_small" />
    </LinearLayout>
</LinearLayout>