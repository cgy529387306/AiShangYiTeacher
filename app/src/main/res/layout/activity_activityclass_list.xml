<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lin_tab"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_filter_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:drawableRight="@drawable/btn_filter"
            android:gravity="center"
            android:text="兴趣分类"
            android:textColor="@drawable/btn_text_gray_orange"
            android:textSize="@dimen/common_text"/>
        <TextView
            android:id="@+id/btn_filter_sort"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:drawableRight="@drawable/btn_filter"
            android:gravity="center"
            android:text="排序"
            android:textColor="@drawable/btn_text_gray_orange"
            android:textSize="@dimen/common_text"/>
    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/common_listview"/>
</LinearLayout>