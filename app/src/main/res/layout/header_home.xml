<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <com.jude.rollviewpager.RollPagerView
        android:id="@+id/myViewPager1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:rollviewpager_hint_color="@color/base_orange"
        app:rollviewpager_play_delay="3000"
        app:rollviewpager_hint_gravity="center"
        app:rollviewpager_hint_paddingBottom="10dp" />
    <com.weima.aishangyi.jiaoshi.widget.NestedGridView
        android:id="@+id/grd_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:horizontalSpacing="15dp"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:verticalSpacing="4dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imv_one"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_one"/>
        <ImageView
            android:id="@+id/imv_together"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_many"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/background_color"/>
    <com.jude.rollviewpager.RollPagerView
        android:id="@+id/myViewPager2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:rollviewpager_hint_color="@color/base_orange"
        app:rollviewpager_play_delay="3000"
        app:rollviewpager_hint_gravity="right"
        app:rollviewpager_hint_paddingRight="10dp"
        app:rollviewpager_hint_paddingBottom="280dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/background_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <View
            android:layout_width="5dp"
            android:layout_height="16dp"
            android:layout_marginLeft="2dp"
            android:background="@color/base_orange" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="推荐老师"
            android:textColor="@color/base_orange"
            android:textSize="@dimen/common_text" />
    </LinearLayout>
</LinearLayout>
