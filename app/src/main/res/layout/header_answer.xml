<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.weima.aishangyi.jiaoshi.widget.CircleImageView
            android:id="@+id/imv_user_avater"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_avatar_default"
            app:border_color="@color/transparent"
            app:border_width="0.0dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:drawableRight="@drawable/ic_tag_question"
                android:text="张老师"
                android:textColor="@color/black"
                android:textSize="@dimen/common_text" />

            <TextView
                android:id="@+id/txv_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="2010-10-10"
                android:textColor="@color/base_gray"
                android:textSize="@dimen/common_text_small" />
        </LinearLayout>
        <TextView
            android:id="@+id/txv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:drawablePadding="4dp"
            android:drawableLeft="@drawable/ic_tag_money"
            android:textSize="@dimen/common_text"
            android:textColor="@color/base_orange"
            android:text="5.00"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txv_problem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="首先，背单词，单词是基础，一定要把单词记熟，背单词。睡前背，早上起来背，效果最好。那你的情况，背单词的时候一定要把读音结合上一块背。"
        android:textColor="@color/text_color"
        android:textSize="@dimen/common_text" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txv_qustion_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_tag_chat"
            android:drawablePadding="4dp"
            android:text="共0人参与回答"
            android:textColor="@color/base_gray"
            android:textSize="@dimen/common_text_small" />
    </LinearLayout>
</LinearLayout>
