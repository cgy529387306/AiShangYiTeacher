<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/btn_paymentdetail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/btn_list_no_boder"
            android:gravity="center_vertical">

            <View
                android:layout_width="5dp"
                android:layout_height="16dp"
                android:layout_marginLeft="10dp"
                android:background="@color/base_orange" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="充值账户"
                android:textColor="@color/base_orange"
                android:textSize="@dimen/common_text" />

            <TextView
                android:id="@+id/txv_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="15394414300"
                android:textColor="@color/text_color"
                android:textSize="@dimen/common_text" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/background_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/btn_list_no_boder"
            android:gravity="center_vertical">

            <View
                android:layout_width="5dp"
                android:layout_height="16dp"
                android:layout_marginLeft="10dp"
                android:background="@color/base_orange" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="充值金额"
                android:textColor="@color/base_orange"
                android:textSize="@dimen/common_text" />

            <EditText
                android:id="@+id/edit_rechargecash"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="number"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="right"
                android:hint="请输入自定义金额"
                android:textColor="@color/base_gray"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/common_text" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/line_color" />

        <ListView
            android:id="@+id/recharge_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/background_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/btn_list_no_boder"
            android:gravity="center_vertical">

            <View
                android:layout_width="5dp"
                android:layout_height="16dp"
                android:layout_marginLeft="10dp"
                android:background="@color/base_orange" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="选择支付方式"
                android:textColor="@color/base_orange"
                android:textSize="@dimen/common_text" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_list_top_bottom_border_normal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/btn_coupons"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/btn_list_no_boder"
                android:gravity="center_vertical"
                android:padding="10dp">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="微信支付"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_weixin"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/common_text" />

                <ImageView
                    android:id="@+id/btn_weixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_checkbox_checked" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color" />

            <LinearLayout
                android:id="@+id/btn_answer"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/btn_list_no_boder"
                android:gravity="center_vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:text="支付宝支付"
                    android:drawableLeft="@drawable/ic_alipay"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/common_text" />

                <ImageView
                    android:id="@+id/btn_zhifubao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_checkbox_uncheck" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_recharge"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_btn_orange"
        android:gravity="center"
        android:text="立即充值"
        android:textColor="@color/white"
        android:textSize="@dimen/common_text" />
</LinearLayout>