<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/imv_icon"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_test_talent_info" />
        <ImageView
            android:id="@+id/imv_jing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_jing"
            android:visibility="gone" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imv_ding"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_ding"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="郑成河《黄昏》"
                android:textColor="@color/black"
                android:textSize="@dimen/common_text_large" />

        </LinearLayout>

        <TextView
            android:id="@id/txv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="中国水墨画协会主办以“形而上下”为主题的水墨画展览，将在广州国际金融中心展馆展出，本次展会是我国国际文化艺术节的重要展览之一。"
            android:textColor="@color/base_gray"
            android:textSize="@dimen/common_text_small" />

    </LinearLayout>
</LinearLayout>