<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/btn_nickname"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <com.weima.aishangyi.jiaoshi.widget.ClearableEditText
            android:id="@+id/edt_user_account"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/shape_edt_white"
            android:drawableLeft="@drawable/ic_phones"
            android:drawablePadding="10dp"
            android:imeOptions="actionNext"
            android:hint="请输入您的手机号"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/hint_color"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/common_text" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="30dp">

        <com.weima.aishangyi.jiaoshi.widget.ClearableEditText
            android:id="@+id/edt_user_code"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@drawable/shape_edt_white"
            android:drawableLeft="@drawable/ic_code"
            android:drawablePadding="10dp"
            android:imeOptions="actionNext"
            android:hint="请输入验证码"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/hint_color"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/common_text" />

        <Button
            android:id="@+id/btn_get_code"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_txv_orange"
            android:text="获取验证码"
            android:textColor="@color/base_orange" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <com.weima.aishangyi.jiaoshi.widget.ClearableEditText
            android:id="@+id/edt_user_password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/shape_edt_white"
            android:drawableLeft="@drawable/ic_newpwd"
            android:drawablePadding="10dp"
            android:imeOptions="actionNext"
            android:hint="6-30位数字或字母"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/hint_color"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/common_text" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <com.weima.aishangyi.jiaoshi.widget.ClearableEditText
            android:id="@+id/edt_user_repassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/shape_edt_white"
            android:drawableLeft="@drawable/ic_newpwd"
            android:drawablePadding="10dp"
            android:imeOptions="actionDone"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/hint_color"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/common_text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <com.weima.aishangyi.jiaoshi.widget.ClearableEditText
            android:id="@+id/edt_invite_code"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/shape_edt_white"
            android:drawableLeft="@drawable/ic_code"
            android:drawablePadding="10dp"
            android:imeOptions="actionNext"
            android:hint="请输入邀请码"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/hint_color"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/common_text" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_user_comfirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_btn_gray"
        android:text="注册"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imv_cheched"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_checkbox_checked" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="我已同意用户服务协议"
            android:textColor="@color/base_orange"
            android:textSize="@dimen/common_text" />

    </LinearLayout>

</LinearLayout>