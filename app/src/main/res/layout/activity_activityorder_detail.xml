<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/btn_paymentdetail"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/btn_list_no_boder"
            android:gravity="center_vertical">

            <View
                android:layout_width="5dp"
                android:layout_height="16dp"
                android:layout_marginLeft="10dp"
                android:background="@color/base_orange" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="订单状态"
                android:textColor="@color/base_orange"
                android:textSize="@dimen/common_text" />

            <TextView
                android:id="@+id/txv_status"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="待确认"
                android:textColor="@color/base_orange"
                android:textSize="@dimen/common_text" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imv_icon"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:src="@drawable/bg_orderdetail" />

             <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="标题"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/common_text" />

                <TextView
                    android:id="@+id/txv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="活动时间："
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/common_text_small" />

                <TextView
                    android:id="@+id/txv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:visibility="gone"
                    android:text="活动内容"
                    android:textColor="@color/base_gray"
                    android:textSize="@dimen/common_text_small" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txv_address"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_localcity"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="福建省福州市鼓楼区"
            android:textColor="@color/base_gray"
            android:textSize="@dimen/common_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/background_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_list_no_boder"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="活动单价"
                android:textColor="@color/text_color"
                android:textSize="@dimen/common_text" />

            <TextView
                android:id="@+id/txv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="¥350.00"
                android:textColor="@color/text_color"
                android:textSize="@dimen/common_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="参与人数"
                android:textColor="@color/text_color"
                android:textSize="@dimen/common_text" />

            <TextView
                android:id="@+id/txv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="1人次"
                android:textColor="@color/text_color"
                android:textSize="@dimen/common_text" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="10dp"
                android:text="合计"
                android:textColor="@color/text_color"
                android:textSize="@dimen/common_text" />

            <TextView
                android:id="@+id/txv_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="¥159.00"
                android:textColor="@color/text_color"
                android:textSize="@dimen/common_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="10dp"
                android:text="优惠券抵用"
                android:textColor="@color/text_color"
                android:textSize="@dimen/common_text" />

            <TextView
                android:id="@+id/txv_coupons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="¥159.00"
                android:textColor="@color/text_color"
                android:textSize="@dimen/common_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="10dp"
                android:text="实付"
                android:textColor="@color/text_color"
                android:textSize="@dimen/common_text" />

            <TextView
                android:id="@+id/txv_real"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="¥350.00"
                android:textColor="@color/base_red"
                android:textSize="@dimen/common_text" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/background_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="订单编号："
                android:textColor="@color/text_color"
                android:textSize="@dimen/common_text" />

            <TextView
                android:id="@+id/txv_orderno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234567890"
                android:textColor="@color/text_color"
                android:textSize="@dimen/common_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="下单时间："
                android:textColor="@color/text_color"
                android:textSize="@dimen/common_text" />

            <TextView
                android:id="@+id/txv_ordertime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-11-30 20:00"
                android:textColor="@color/text_color"
                android:textSize="@dimen/common_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_paytime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="付款时间："
                android:textColor="@color/text_color"
                android:textSize="@dimen/common_text" />

            <TextView
                android:id="@+id/txv_paytime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-12-1 20:00"
                android:textColor="@color/text_color"
                android:textSize="@dimen/common_text" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>