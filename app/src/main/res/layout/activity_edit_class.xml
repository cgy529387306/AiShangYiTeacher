<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imv_recover"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_addcover" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="课程名称："
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/common_text" />

                    <EditText
                        android:id="@+id/edit_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入自定义课程名称"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/hint_color"
                        android:textSize="@dimen/common_text_small" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/background_color" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/btn_list_no_boder"
                android:gravity="center_vertical">

                <View
                    android:layout_width="5dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/base_orange" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="课时数量"
                    android:textColor="@color/base_orange"
                    android:textSize="@dimen/common_text" />

                <ImageView
                    android:id="@+id/btnReduce"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_reduce" />

                <EditText
                    android:id="@+id/edit_count"
                    android:layout_width="88dp"
                    android:layout_height="28dp"
                    android:background="@drawable/bg_list_both_border_normal"
                    android:gravity="center"
                    android:text="1"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/common_text" />

                <ImageView
                    android:id="@+id/btnAdd"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_add" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/background_color" />
            <LinearLayout
                android:id="@+id/btn_paymentdetail"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical">

                <View
                    android:layout_width="5dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/base_orange" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="课程类型设置"
                    android:textColor="@color/base_orange"
                    android:textSize="@dimen/common_text" />

                <TextView
                    android:id="@+id/txv_one"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_rect_orange"
                    android:gravity="center"
                    android:text="一对一课程"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_text" />

                <TextView
                    android:id="@+id/txv_together"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_rect_white"
                    android:gravity="center"
                    android:text="拼课"
                    android:textColor="@color/base_gray"
                    android:textSize="@dimen/common_text" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/background_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical">

                <View
                    android:layout_width="5dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/base_orange" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="课程简介"
                    android:textColor="@color/base_orange"
                    android:textSize="@dimen/common_text" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color" />

            <EditText
                android:id="@+id/eidt_brief"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:hint="请输入20字以内简介"
                android:maxLength="20"
                android:textColor="@color/text_color"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/common_text" />
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/background_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical">

                <View
                    android:layout_width="5dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/base_orange" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="课程详细介绍"
                    android:textColor="@color/base_orange"
                    android:textSize="@dimen/common_text" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color" />

            <EditText
                android:id="@+id/edit_detail"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:gravity="top"
                android:hint="详细的课程简介"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_color"
                android:textSize="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/line_color" />

            <com.weima.aishangyi.jiaoshi.widget.NestedGridView
                android:id="@+id/add_pic_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:numColumns="3"
                android:paddingTop="10dp"
                android:stretchMode="columnWidth" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/base_orange"
        android:gravity="center"
        android:text="提交审核"
        android:textColor="@color/white"
        android:textSize="@dimen/common_text" />
</LinearLayout>
