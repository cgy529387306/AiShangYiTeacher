<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imv_icon"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_find" />

            <TextView
                android:id="@+id/txv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="广州第十一届舞蹈大赛现场门票"
                android:textColor="@color/text_color"
                android:textSize="@dimen/common_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txv_count_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/ic_enrool"
                    android:drawablePadding="10dp"
                    android:text="可报名数：30人"
                    android:textColor="@color/base_gray"
                    android:textSize="@dimen/common_text_small" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/base_gray" />

                <TextView
                    android:id="@+id/txv_count_join"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="已报名数：10人"
                    android:textColor="@color/base_gray"
                    android:textSize="@dimen/common_text_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/ic_activity_starttime"
                    android:drawablePadding="10dp"
                    android:text="活动时间："
                    android:textColor="@color/base_gray"
                    android:textSize="@dimen/common_text_small" />

                <TextView
                    android:id="@+id/txv_beginTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-11-10 08:30"
                    android:textColor="@color/base_gray"
                    android:textSize="@dimen/common_text_small" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/base_gray" />

                <TextView
                    android:id="@+id/txv_end_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="进行中"
                    android:textColor="@color/base_gray"
                    android:textSize="@dimen/common_text_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/ic_activity_endtime"
                        android:drawablePadding="10dp"
                        android:text="报名截止："
                        android:textColor="@color/base_gray"
                        android:textSize="@dimen/common_text_small" />

                    <TextView
                        android:id="@+id/txv_endTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2016-10-10 08:30"
                        android:textColor="@color/base_gray"
                        android:textSize="@dimen/common_text_small" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="10dp"
                        android:background="@color/base_gray" />

                    <TextView
                        android:id="@+id/txv_time_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="报名中"
                        android:textColor="@color/base_gray"
                        android:textSize="@dimen/common_text_small" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txv_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_rect_lightred"
                    android:text="¥50"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_text_small" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txv_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_location_gray"
                    android:drawablePadding="10dp"
                    android:singleLine="true"
                    android:text="仓山江南大道198号"
                    android:textColor="@color/base_gray"
                    android:textSize="@dimen/common_text_small" />

                <TextView
                    android:id="@+id/txv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:drawablePadding="6dp"
                    android:drawableTop="@drawable/ic_location_map"
                    android:singleLine="true"
                    android:text="113m"
                    android:textColor="@color/base_gray"
                    android:textSize="@dimen/common_text_small" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/background_color"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="5dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/base_orange" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="详情介绍"
                    android:textColor="@color/base_orange"
                    android:textSize="@dimen/common_text" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/line_color" />

            <TextView
                android:id="@+id/txv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="中国水墨画协会主办以“形而上下”为主题的水墨画展览，将在广州国际金融中心展馆展出，本次展会是我国国际文化艺术节的重要展览之一。"
                android:textColor="@color/text_color"
                android:textSize="@dimen/common_text" />
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/btn_enroll"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="立即报名"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/base_orange"
        android:textSize="@dimen/common_text" />
</LinearLayout>
