<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/btn_paymentdetail"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/btn_list_no_boder"
            android:gravity="center_vertical">

            <View
                android:layout_width="5dp"
                android:layout_height="16dp"
                android:layout_marginLeft="10dp"
                android:background="@color/base_orange" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="已选课程"
                android:textColor="@color/base_orange"
                android:textSize="@dimen/common_text" />

            <TextView
                android:id="@+id/txv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="待确认"
                android:textColor="@color/base_orange"
                android:textSize="@dimen/common_text" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imv_icon"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:src="@drawable/bg_orderdetail" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txv_classname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="舞蹈课程"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/common_text" />

                <TextView
                    android:id="@+id/txv_classdesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="现代舞-无基础入门"
                    android:textColor="@color/base_gray"
                    android:textSize="@dimen/common_text_small" />

                <TextView
                    android:id="@+id/txv_classtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="一对一课程"
                    android:textColor="@color/base_gray"
                    android:textSize="@dimen/common_text_small" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txv_address"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_localcity"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="福建省福州市鼓楼区"
            android:textColor="@color/base_gray"
            android:textSize="@dimen/common_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/background_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="订单编号"
                android:textColor="@color/text_color"
                android:textSize="@dimen/common_text" />

            <TextView
                android:id="@+id/txv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="66666"
                android:textColor="@color/base_gray"
                android:textSize="@dimen/common_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_list_no_boder"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="预定时间"
                android:textColor="@color/text_color"
                android:textSize="@dimen/common_text" />

            <TextView
                android:id="@+id/txv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="周一 12:00-14:00"
                android:textColor="@color/base_gray"
                android:textSize="@dimen/common_text" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/line_color" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/background_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imv_teacher_avater"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@drawable/head_orderdetail" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txv_teacher_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张老师"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/common_text" />

                <TextView
                    android:id="@+id/txv_teacher_goodat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="会做饭"
                    android:textColor="@color/base_gray"
                    android:textSize="@dimen/common_text_small" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imv_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_orderdetail_msg" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/background_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancelOrder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/shape_rect_orange"
                android:gravity="center"
                android:text="申请退款"
                android:textColor="@color/white"
                android:textSize="@dimen/common_text" />

            <TextView
                android:id="@+id/comfirmOrder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/shape_rect_orange"
                android:gravity="center"
                android:text="确认授课"
                android:textColor="@color/white"
                android:textSize="@dimen/common_text" />
        </LinearLayout>
    </LinearLayout>

    <com.mb.android.utils.view.LoadingView
        android:id="@+id/loadingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:visibility="gone"
        app:bGradient="false"
        app:bg_transparent="false"
        app:circleColor="@color/base_orange"
        app:radius="50dp" />
</FrameLayout>